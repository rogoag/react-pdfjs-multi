{
  "name": "react-pdfjs-multi",
  "version": "0.5.1",
  "description": "React wrapper for pdfjs with multiple file support",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup -c",
    "build:example": "cd examples && yarn && yarn build",
    "prepare": "npm run build",
    "start": "rollup -c -w",
    "test": "jest --env=jsdom",
    "test:watch": "npm run test -- --watch",
    "coveralls": "jest --coverage && cat ./__tests__/coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcklei/react-pdfjs-multi.git"
  },
  "keywords": [
    "react",
    "pdfjs",
    "pdf",
    "pdf-viewer"
  ],
  "files": [
    "dist"
  ],
  "author": "Marcus Klein",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marcklei/react-pdfjs-multi/issues"
  },
  "homepage": "https://github.com/marcklei/react-pdfjs-multi#readme",
  "devDependencies": {
    "@types/enzyme": "^3.1.14",
    "@types/jest": "^26.0.4",
    "@types/pdfjs-dist": "^2.1.2",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.2",
    "caniuse-lite": "^1.0.30000886",
    "coveralls": "^3.0.2",
    "cssnano": "^4.1.0",
    "enzyme": "^3.6.0",
    "jest": "^26.1.0",
    "node-sass": "^4.9.3",
    "postcss-cssnext": "^3.1.0",
    "postcss-url": "^8.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.0",
    "rollup": "^2.21.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^3.1.3",
    "rollup-plugin-scss": "^2.5.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "rollup-plugin-url": "^3.0.0",
    "ts-jest": "^26.1.3",
    "tslint": "^6.1.2",
    "tslint-react": "^5.0.0",
    "typescript": "^3.0.3"
  },
  "peerDependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "dependencies": {
    "custom-event-polyfill": "^1.0.6",
    "pdfjs-dist": "2.5.207",
    "print-js": "^1.6.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/__tests__/setup/setupTest.ts"
    ],
    "testMatch": [
      "<rootDir>/__tests__/**/?(*.)(spec|test).ts?(x)"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.ts"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "coverageDirectory": "<rootDir>/__tests__/coverage"
  }
}
